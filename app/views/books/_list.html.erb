<!-- @book → book -->
<h1>User info</h1>
<% if @user.profile_image.present? %>
  <%= image_tag @user.profile_image, size: "200x200" %>
<% else %>
  <%= image_tag 'no_image.jpg', size: "200x200" %> <!-- デフォルト画像 -->
<% end %>
<h4>name</h4>
<%= @user.name %>

<h4>introduction</h4>
<%= @user.introduction %>

<p><%= link_to edit_user_path(@user) ,class: "btn btn-secondary" do %>
  <i class="fa-solid fa-user-gear" style="width: 150px; height: auto; display: inline-block; color: white"></i>
  <% end %>
</p>

<% if @book && @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>New book</h1>
<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %>


<%= f.submit 'Create Book' %>
<% end %>


  <body>
    <% if flash[:notice] %>
    <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    
  <div class="container">  
    <div class="row"> 
      <div class="col-md-3 " >
        <%= render 'books/list', books: @books %>
      </div>
      <div class="col-md-8 offset-md-1"> 
      <h1 class="heading">Books</h1>
        <table class="table table-striped">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>  
          <tr>
            <td>
            <span>
            <% if book.user.profile_image.present? %>
              <%= link_to "/users/#{book.user.id}" do %>
                <%= image_tag book.user.profile_image, size: "100x100" %>
              <% end %>
            <% else %>
              <%= link_to "/users/#{book.user.id}" do %>
                <%= image_tag 'no_image.jpg', size: "100x100" %> 
              <% end %>
            <% end %>
            <span>
              <span><%=link_to book.title, "/books/#{book.id}"%><span>
            </td>
            <td>
              <span><%= book.body %></span>
            </td>
            
          </tr>
          <% end %>          
        </tbody>
      </table>
      </div>
      </div>  <!-- この行を追加 -->
      </div>
      
  </body>


